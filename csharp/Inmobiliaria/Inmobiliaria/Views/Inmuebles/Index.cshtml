            <th>
                @Html.DisplayNameFor(model => model.fecha_construccion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.metros)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.es_nuevo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.precio_base)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fecha_construccion)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
