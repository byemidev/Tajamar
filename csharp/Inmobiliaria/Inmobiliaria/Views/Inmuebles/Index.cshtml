@model IEnumerable<Inmobiliaria.Models.Inmueble>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.metros)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.es_nuevo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.precio_base)
