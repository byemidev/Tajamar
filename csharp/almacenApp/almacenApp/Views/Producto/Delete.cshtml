@model almacenApp.Models.Producto

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Producto</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.id_producto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.id_producto)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.stock_cantidad)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.stock_cantidad)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.categoria)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.categoria)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.precio)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.precio)
        </dd>
    </dl>
 
    <form method="post" asp-controller="producto" asp-action="DeleteOnDB">
        @Html.HiddenFor(model => model.id_producto)
        @Html.HiddenFor(model => model.nombre)
        @Html.HiddenFor(model => model.stock_cantidad)
        @Html.HiddenFor(model => model.categoria)
        @Html.HiddenFor(model => model.precio)
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>
